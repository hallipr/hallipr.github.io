{
	"version": "2.0.0",
	"tasks": [
    {
      "type": "npm",
      "script": "build --workspaces --if-present",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [],
      "label": "npm: build" 
    },
    {
      "type": "npm",
      "script": "test",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": [],
      "label": "npm: test"
    },
    {
      "label": "start server",
      "type": "npm",
      "script": "dev",
      "problemMatcher": {
        "base": "$tsc-watch",
        "background": {
          "activeOnStart": true,
          "beginsPattern": "VITE",
          "endsPattern": "Local: +http://localhost:(\\d+)/"
        }
      },
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "focus": false,
        "panel": "new"
      },
    }
  ]
}
