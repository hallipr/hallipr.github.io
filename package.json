{
    "name": "ark-map-viewer",
    "version": "1.0.0",
    "description": "ARK Map Resource Viewer",
    "type": "module",
    "scripts": {
        "build": "esbuild src/main.ts --bundle --outfile=./root/index.js --format=iife --target=es2020 && echo Build completed at: && powershell -Command \"Get-Date -Format 'yyyy-MM-dd HH:mm:ss'\"",
        "test": "node --import tsx --test tests/**/*.test.ts",
        "dev": "npx http-server root -p 8080 -c-1",
        "lint": "eslint \"src/**/*.{ts,tsx}\" \"tests/**/*.{ts,tsx}\"",
        "format": "prettier --write \"**/*.{ts,tsx,js,jsx,css,html,json,md}\"",
        "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,css,html,json,md}\"",
        "analyze": "npm run format:check && npm run lint && npm run test"
    },
    "dependencies": {
        "three": "^0.128.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.2",
        "@types/jest": "^30.0.0",
        "@types/node": "^22.10.5",
        "@types/three": "^0.128.0",
        "@typescript-eslint/eslint-plugin": "^8.53.1",
        "@typescript-eslint/parser": "^8.53.1",
        "esbuild": "^0.27.2",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^9.1.2",
        "globals": "^15.15.0",
        "http-server": "^14.1.1",
        "prettier": "^3.8.0",
        "tsx": "^4.19.2",
        "typescript": "^5.9.3"
    }
}
